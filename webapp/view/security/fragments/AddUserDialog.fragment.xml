<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="AddUserDialog"
        title="Añadir Usuario"
        icon="sap-icon://add"
        type="Message"
        class="customDialogSize"
        draggable="true"
        resizable="true"
    >
        <VBox id="AddUserDialogVbox" class="sapUiSmallMargin">

            <Input
                id="inputUserId"
                placeholder="ID de Usuario"
                value="{newUserModel>/USERID}" />

            <!-- Nuevo: Campo PASSWORD -->
            <Input
                id="inputUserPassword"
                placeholder="Contraseña"
                type="Password"
                value="{newUserModel>/PASSWORD}" />
            
            <!-- Nuevo: Campo ALIAS -->
            <Input
                id="inputUserAlias"
                placeholder="Alias"
                value="{newUserModel>/ALIAS}" />

            <!-- Nuevo: Campos FIRSTNAME y LASTNAME -->
            <Input
                id="inputUserFirstName"
                placeholder="Primer Nombre"
                value="{newUserModel>/FIRSTNAME}" />
            <Input
                id="inputUserLastName"
                placeholder="Apellido"
                value="{newUserModel>/LASTNAME}" />

            <!-- Nuevo: Campo EMPLOYEEID -->
            <Input
                id="inputEmployeeId"
                placeholder="ID de Empleado"
                value="{newUserModel>/EMPLOYEEID}" />

            <!-- Nuevo: Campo EXTENSION -->
            <Input
                id="inputExtension"
                placeholder="Extensión"
                value="{newUserModel>/EXTENSION}" />

            <!-- Campo existente: Número telefónico -->
            <Input
                id="inputUserPhoneNumber"
                placeholder="Número telefónico"
                value="{newUserModel>/PHONENUMBER}" />

            <!-- Campo existente: Correo Electrónico -->
            <Input
                id="inputUserEmail"
                placeholder="Correo Electrónico"
                value="{newUserModel>/EMAIL}" />

            <!-- Campo existente: Fecha de nacimiento -->
            <DatePicker
                id="inputUserBirthdayDate"
                placeholder="Fecha de nacimiento"
                value="{newUserModel>/BIRTHDAYDATE}" />

            <!-- Nuevo: Campo AVATAR (URL del avatar o similar) -->
            <Input
                id="inputUserAvatar"
                placeholder="URL del Avatar"
                value="{newUserModel>/AVATAR}" 
            />

            <ComboBox id="comboBoxCompanies" items="{companiesModel>/companies}" selectionChange="onCompanySelected" placeholder="Compañía">
                <core:Item key="{companiesModel>VALUEID}" text="{companiesModel>VALUE}" />
            </ComboBox>

            
            <ComboBox id="comboBoxCedis" items="{cedisModel>/cedis}" selectionChange="onCediSelected" placeholder="Departamento">
                <core:Item key="{cedisModel>VALUEID}" text="{cedisModel>VALUE}" />
            </ComboBox>

            <ComboBox id="comboBoxRoles" items="{rolesModel>/roles}" selectionChange="onRoleSelected" placeholder="Selecciona un Rol">
                <core:Item key="{rolesModel>ROLEID}" text="{rolesModel>ROLENAME}" />
            </ComboBox>

            
            <VBox id="selectedRolesVBox" class="sapUiSmallMarginTop">
                <!--VBOx donde va añadiendo los roles -->
            </VBox>
            
            <Input id="inputUserFunction" placeholder="Función que ejerce"/>
                            
            <!-- Grupo: Datos de dirección -->
      <Title text="Dirección" level="H4" class="sapUiSmallMarginTop"/>
      <!-- Nuevo: Calle -->
      <Input
          id="inputStreetUser"
          placeholder="Calle"
          value="{newUserModel>/STREET}" />
      <!-- Nuevo: Código Postal -->
      <Input
          id="inputPostalCodeUser"
          placeholder="Código Postal"
          value="{newUserModel>/POSTALCODE}" />
      <!-- Nuevo: Ciudad -->
      <Input
          id="inputCityUser"
          placeholder="Ciudad"
          value="{newUserModel>/CITY}" />
      <!-- Nuevo: Región -->
      <Input
          id="inputRegionUser"
          placeholder="Región"
          value="{newUserModel>/REGION}" />
      <!-- Nuevo: Estado -->
      <Input
          id="inputStateUser"
          placeholder="Estado"
          value="{newUserModel>/STATE}" />
      <!-- Nuevo: País -->
      <Input
          id="inputCountryUser"
          placeholder="País"
          value="{newUserModel>/COUNTRY}" />

        </VBox>

        <beginButton>
            <Button id="SaveNewUser" text="Guardar" type="Emphasized" press="onSaveUser" />
        </beginButton>

        <endButton>
            <Button id="CancelSaveUser" text="Cancelar" press="onCancelUser" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
